{
    "name": "modera/security-bundle",
    "type": "symfony-bundle",
    "license": "MIT",
    "description": "Provides database aware implementation of Security model + some other perks",
    "authors": [
        {
            "name": "Sergei Vizel",
            "email": "sergei.vizel@modera.org"
        },
        {
            "name": "Sergei Lissovski",
            "email": "sergei.lissovski@modera.org",
            "homepage": "http://sergei.lissovski.org/"
        }
    ],
    "require": {
        "php": ">=5.4",
        "symfony/symfony": "~2.6 || ^3.0",
        "symfony/swiftmailer-bundle": "~2.3 || ^3.0",
        "doctrine/orm": "~2.2,>=2.2.3",
        "doctrine/doctrine-bundle": "~1.2",
        "sergeil/extjsintegration-bundle": "dev-master",
        "modera/foundation-bundle": "~1.0 || ~2.0",
        "modera/translations-bundle": "~1.0 || ~2.0"
    },
    "require-dev": {
        "modera/foundation-bundle": "~1.0 || ~2.0",
        "modera/languages-bundle": "~1.0 || ~2.0",
        "phake/phake": "~2.0",
        "phpunit/phpunit": "^5.5"
    },
    "autoload": {
        "psr-0": { "Modera\\SecurityBundle": "" }
    },
    "target-dir": "Modera/SecurityBundle",
    "extra": {
        "branch-alias": {
            "dev-master": "2.x-dev"
        }
    }
}
